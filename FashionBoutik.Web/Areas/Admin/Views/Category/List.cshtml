@model IEnumerable<CategoryModel>
@using FashionBoutik.Models

<div class="top-buffer"></div>
<div class="panel panel-primary">
    <div class="panel-heading panel-head"> Categories</div>
    <div class="panel-body">
        <div class="btn-group">
            <a href="/Admin/Category/Add" id="createCategory" class="btn btn-primary"
               data-toggle="modal" data-target="#modal-action">
                <i class="glyphicon glyphicon-plus"></i>  New
            </a>
        </div>
        <div class="top-buffer"></div>
        <table class="table table-bordered table-striped table-condensed">
            <thead>
                <tr>
                    <td>CategorName</td>
                    <td>Description</td>
                    <td>Status</td>
                    <td>Image</td>
                    @*<td>SubCategories</td>*@
                    <td>Actions</td>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.CategoryName</td>
                        <td>@item.Description</td>
                        <td>@item.Status</td>
                        @*<td>@item.PublishStatus</td>
                            <td>@item.HierarchicalLevel</td>*@
                        @*<td>@item.SubCategories</td>*@
                        <td>
                            <img src="@Url.Content(item.Image)" height="20" />
                        </td>
                        <td>
                            <a id="editCategory" class="btn btn-info"
                               data-toggle="modal" data-target="#modal-action" 
                               asp-area="Admin" asp-controller="Category" asp-action="Edit" asp-route-id="@item.Id">
                                <i class="glyphicon glyphicon-pencil"></i>  Edit
                            </a> | 
                            <a class="btn btn-danger" data-toggle="modal" data-target="#modal-action"
                               asp-area="Admin" asp-controller="Category" asp-action="Delete" asp-route-id="@item.Id">
                                <i class="glyphicon glyphicon-trash"></i>  Delete
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@Html.Partial("_Modal", new BootstrapModel { ID = "modal-action", AreaLabeledId = "#modal-action-label" })