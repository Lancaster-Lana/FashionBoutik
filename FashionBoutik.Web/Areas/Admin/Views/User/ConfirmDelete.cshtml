@model UserViewModel
@using FashionBoutik.Models

<form asp-area="Admin" asp-controller="User" asp-action="ConfirmDelete" asp-route-id="@Model.Id" role="form">
    @Html.Partial("_ModalHeader", new ModalHeader { Heading = "Delete User" })
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="modal-body form-horizontal">
        Are you sure to delete the user '@Model.UserName' ?
    </div>
    @Html.Partial("_ModalFooter", new ModalFooter { SubmitButtonText = "Delete" })
</form>
