@model IEnumerable<UserListViewModel>
@using FashionBoutik.Models

@section scripts
    {
    @*<script src="~/js/user-index.js" asp-append-version="true"></script>*@
}

<div class="panel panel-primary">
    <div class="panel-heading panel-head">Users</div>
    <div class="panel-body">
        <div class="btn-group">
            <a id="createEditUserModal" class="btn btn-primary"
               data-toggle="modal" data-target="#modal-action"
               asp-area="Admin" asp-action="Add" asp-controller="User" >
                <i class="glyphicon glyphicon-plus"></i>  Add User
            </a>
        </div>
        <div class="top-buffer"></div>
        <table class="table table-bordered table-striped table-condensed">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Name</td>
                        <td>@item.Email</td>
                        <td>
                            <a id="editUserModal" class="btn btn-info"
                               data-toggle="modal" data-target="#modal-action"
                               asp-area="Admin" asp-controller="User" asp-action="Edit" asp-route-id="@item.Id">
                                <i class="glyphicon glyphicon-pencil"></i>  Edit
                            </a> | 
                            <a id="deleteUserModal" class="btn btn-danger"
                               data-toggle="modal" data-target="#modal-action"
                               asp-area="Admin"  asp-controller="User" asp-action="Delete" asp-route-id="@item.Id">
                                <i class="glyphicon glyphicon-trash"></i>  Delete
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@Html.Partial("_Modal", new BootstrapModel { ID = "modal-action", AreaLabeledId = "#modal-action-user-label" })
