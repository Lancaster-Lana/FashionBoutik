@model RoleViewModel
@using FashionBoutik.Models

<form asp-area="Admin" asp-controller="Role" asp-action="ConfirmDelete" asp-route-id="@Model.Id" role="form">
    @Html.Partial("_ModalHeader", new ModalHeader { Heading = "Delete Role" })

    <div class="modal-body form-horizontal">
        Are you want to delete the role "@Model.Name"?
    </div>
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    @Html.Partial("_ModalFooter", new ModalFooter { SubmitButtonText = "Delete" })
</form>
