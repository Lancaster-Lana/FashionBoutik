<!DOCTYPE html>
<html class="no-js" lang="en">
<head>
    <meta charset="utf-8">
    <meta name="description" content="The content description">
    <link rel="shortcut icon" href="@Url.Content("~/Content/images/favicon.ico")">
    <title>@ViewBag.Title</title>

    <!-- Shape contact-->
    <link href="@Url.Content("~/css/font-awesome.min.css")" rel="stylesheet" type="text/css">
    <link href="@Url.Content("~/css/Site.css")" rel="stylesheet" />
    <link href="@Url.Content("~/css/full_screen_preview.css")" rel="stylesheet" />
    <link href="@Url.Content("~/css/prettify.css")" rel="stylesheet" />
    <link href='http://fonts.googleapis.com/css?family=Open+Sans:400,600,700' rel='stylesheet' type='text/css'>
    <link href="https://ajax.aspnetcdn.com/ajax/bootstrap/3.3.6/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <header>
        <nav id="login">
            @Html.Partial("_LogOnPartial")
        </nav>
        <span>
            <h1 class="stylishHeader">New Fashion </h1>
            <h2 class="stylishHeader">your fashion revolution </h2>
        </span>
        <nav>
            <ul>
                <li>@Html.ActionLink("Season clothes", "Index", "Season")</li>
                <li>@Html.ActionLink("Furshet style", "Index", "Furshet")</li>
                <li>@Html.ActionLink("Business style", "Index", "Business")</li>
                @*<li>@Html.ActionLink("Sport fashion", "Index", "Sport")</li>*@
                <li>@Html.ActionLink("About", "About", "Home")</li>
            </ul>
        </nav>
    </header>

    <div class="content_">
        @RenderBody()
    </div>

    <footer>
        <h4 class="text-center">@Html.Raw(string.Format("{0} {1} {2}", "&copy;", DateTime.Now.Year, "lana-soft.com"))</h4>
    </footer>

    <!-- Carosel slider-->
    <link href="~/css/carousel.css" rel="stylesheet" />

    <script type="text/javascript" src="~/Scripts/jquery-1.4.4.min.js"></script>
    <script type="text/javascript" src="~/Scripts/jquery.mousewheel.min.js"></script>
    <script type="text/javascript" src="~/Scripts/jquery.carousel-1.1.min.js"></script>
    <script src="~/Scripts/sample01.js" type="text/javascript"></script>

    <!-- Nivo slider-->
    <link href="~/css/nivo-slider.css" rel="stylesheet" />
    <link href="~/css/orman.css" rel="stylesheet" />
    <script src="~/Scripts/jquery.nivo.slider.pack.js" type="text/javascript"></script>
    <script type="text/javascript">
        $(function () {
            //call nivoslider for each section
            $('.nivoSlider').each(function (i, sl) {
                $(sl).nivoSlider({
                    controlNavThumbs: true,
                    controlNavThumbsFromRel: true,
                    directionNav: false, // Next and Prev
                    keyboardNav: true, // Use left and right arrows
                    pauseOnHover: true // Stop animation while hovering
                });
            });
        });

    </script>

    <!-- BookShell accordion-->
    @*<link href="@Url.Content("~/css/accordion_horizontal.css")" rel="stylesheet" />*@
    <script src="~/Scripts/jquery.easing.1.3.min.js" type="text/javascript"></script>
    <script src="~/Scripts/jquery.kwicks-1.5.1.js" type="text/javascript"></script>
    <script type="text/javascript">
        $(function () {
            $('.slider').kwicks({ max: 400, spacing: 1 });
        });
    </script>


    <script src="@Url.Content("~/Scripts/prettify.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/modernizr-2.0.6.js")"></script>

    @* Grab Google CDN's jQuery. fall back to local if necessary*@
    <script> window.jQuery || document.write(unescape("%3Cscript src='@Url.Content("~/Scripts/jquery-1.6.4.min.js")'%3E%3C/script%3E"))</script>
    @RenderSection("scripts", false)

</body>
