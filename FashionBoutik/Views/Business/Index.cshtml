@{
    ViewBag.Title = "Business style";

    List<string> images = new List<string>();
    String path = Server.MapPath("~/css/images/business");
    if (Directory.Exists(path))
    {
        var files = Directory.GetFiles(path);
        foreach (var file in files)
        {
            var fileName = Path.GetFileName(file);
            images.Add("/css/images/business/" + fileName);
        }
    }
}

@section Styles
{
    <link href="~/css/kwicks.accordion.css" rel="stylesheet" />
}

@section Scripts
{
    <!-- BookShell accordion-->
    <script src="~/Scripts/jquery.easing.1.3.min.js" type="text/javascript"></script>
    <script src="~/Scripts/jquery.kwicks-1.5.1.js" type="text/javascript"></script>
    <script type="text/javascript">
        $(function () {
            $('.slider').kwicks({ max: 400, spacing: 1 });
        });
    </script>
}

<div>
    <ul class="slider horizontal">
        @foreach (var i in images)
        {
            <li id="slide" class="slide">
                <img src="@i" alt="slide">
            </li>
        }
    </ul>
</div>

